<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    tools:context=".Activity.AboutActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolsbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/purple_500"
        android:background="@color/purple_500" >
        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/back_allotework"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:fontFamily="@font/lora"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView

            android:id="@+id/base_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:longClickable="true"
            android:layout_marginTop="20dp"


            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patron and Organizing Chairperson"
                    android:fontFamily="@font/lora"
                    android:layout_marginTop="10sp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"


                    />
                <ImageButton
                    android:id="@+id/patrondown"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/down"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:visibility="gone"
                android:layout_marginBottom="20sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/lora"
                    android:text="@string/patron_and_organizing_chairperson"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_marginTop="10sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/lora"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Prof (Dr.) Vikas Bhatia"
                    />
            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:id="@+id/organizing_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:longClickable="true"
            android:layout_marginTop="20dp"


            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizing Chairperson"
                    android:fontFamily="@font/lora"
                   android:layout_marginTop="10sp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"


                    />
                <ImageButton
                    android:id="@+id/organizingdown"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="90sp"

                    android:layout_gravity="end"
                    android:background="@drawable/down"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:visibility="gone"
                android:layout_marginBottom="20sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora"
                    android:text="@string/organizing_chairperso"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <TextView
                    android:layout_marginTop="10sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/lora"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Prof (Dr.) Neeraj Agarwal"
                    />
            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:id="@+id/OrganizingViceChairperson_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:longClickable="true"
            android:layout_marginTop="20dp"


            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"


                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizing Vice Chairperson"
                    android:fontFamily="@font/lora"
                   android:layout_marginTop="10sp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"


                    />

                <ImageButton
                    android:id="@+id/OrganizingViceChairperson_down"
                    android:layout_width="50dp"
                    android:layout_height="34dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="60sp"

                    android:background="@drawable/down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:visibility="gone"
                android:layout_marginBottom="20sp"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora"
                    android:text="Dear Colleagues,"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora"
                    android:text="@string/OrganizingViceChairperson"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/lora"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Dr. Rashmi Kundapur"
                    />

            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/OrganizingSecretary_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:longClickable="true"
            android:layout_marginTop="20dp"
          android:layout_marginBottom="40sp"

            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizing Secretary"
                    android:fontFamily="@font/lora"
                   android:layout_marginTop="10sp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"


                    />
                <ImageButton
                    android:id="@+id/OrganizingSecretary_down"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="110sp"

                    android:background="@drawable/down"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hidden_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:visibility="gone"
                android:layout_marginBottom="20sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lora"
                    android:text="@string/OrganizingSecretary"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/lora"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="Dr. Meely Panda"
                    />
            </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
    </LinearLayout>
</ScrollView>